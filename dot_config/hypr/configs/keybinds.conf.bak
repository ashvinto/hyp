###################
### KEYBINDINGS ###
###################

# See https://wiki.hyprland.org/Configuring/Keywords/
$mainMod = SUPER # Sets "Windows" key as main modifier

# Example binds, see https://wiki.hyprland.org/Configuring/Binds/ for more
bind = $mainMod, T, exec, foot
# bind = $mainMod SHIFT, RETURN, exec, [float; size 800 550] $terminal 
bind = $mainMod, Q, killactive, 
bind = CTRL ALT, Delete, exec, hyprctl dispatch exit 0 # exit Hyprland
bind = $mainMod, E, exec, $fileManager
bind = $mainMod, Space, togglefloating, 
bind = $mainMod, A, exec, $menu
bind = $mainMod, P, pseudo, # dwindle
bind = $mainMod, J, togglesplit, # dwindle
bind = $mainMod, R, exec, ~/.config/hypr/scripts/wbrestart.sh
# bind = $mainMod, B, exec, xdg-open "https://"  # default browser
bind = Alt, M, exec, ~/.config/hypr/scripts/lock.sh
bind = $mainMod SHIFT, F, fullscreen, 
# bind = $mainMod SHIFT, P, exec, .//home/zoro/.config/hypr/scripts/screenshot.sh full
bind = $mainMod, W, exec, ~/.config/hypr/scripts/wppicker.sh
bind = $mainMod SHIFT, W, exec, qs -c wallpaper-selector
bind = $mainMod SHIFT, Q, exec, ~/.config/hypr/scripts/KillActiveProcess.sh # Kill active process
bind = $mainMod, C, exec, hyprpicker -a
bind = $mainMod CTRL, B, exec, ~/.config/hypr/scripts/WaybarStyles.sh # Waybar Styles Menu
bind = $mainMod ALT, B, exec, ~/.config/hypr/scripts/WaybarLayout.sh # Waybar Layout Menu
# bind = $mainMod, v, exec, ~/.config/scripts/clipboad_manager.sh
bind = $mainMod, H, exec, pkill -SIGUSR1 waybar # Hide Waybar
bind = $mainMod SHIFT, E, exec, kitty yazi # Yazi File Manager
bind = $mainMod, Print, exec, ~/.config/hypr/scripts/screenshot.sh # UI
bind = , Print, exec, ~/.config/hypr/scripts/screenshot.sh full # Direct Full
bind = $mainMod SHIFT, P, exec, ~/.config/hypr/scripts/screenshot.sh area # Direct Area
bind = $mainMod ALT, Print, exec, ~/.config/hypr/scripts/screenshot.sh window # Direct Window
bind = $mainMod SHIFT, Print, exec, ~/.config/hypr/scripts/screenshot.sh freeze # Freeze Mode
bind = $mainMod, V, exec, ~/.config/hypr/scripts/clipboard.sh
# bind = $mainMod, V,  exec, qs -c noctalia-shell ipc call launcher clipboard

# Move focus with mainMod + arrow keys
bind = $mainMod, left, movefocus, l
bind = $mainMod, right, movefocus, r
bind = $mainMod, up, movefocus, u
bind = $mainMod, down, movefocus, d

# Move  Windows
bind = $mainMod CTRL, left, movewindow, l
bind = $mainMod CTRL, right, movewindow, r
bind = $mainMod CTRL, up, movewindow, u
bind = $mainMod CTRL, down, movewindow, d

# Resize windows
binde = $mainMod SHIFT, left, resizeactive,-50 0
binde = $mainMod SHIFT, right, resizeactive,50 0
binde = $mainMod SHIFT, up, resizeactive,0 -50
binde = $mainMod SHIFT, down, resizeactive,0 50

# Switch workspaces with mainMod + [0-9]
bind = $mainMod, 1, workspace, 1
bind = $mainMod, 2, workspace, 2
bind = $mainMod, 3, workspace, 3
bind = $mainMod, 4, workspace, 4
bind = $mainMod, 5, workspace, 5
bind = $mainMod, 6, workspace, 6
bind = $mainMod, 7, workspace, 7
bind = $mainMod, 8, workspace, 8
bind = $mainMod, 9, workspace, 9
bind = $mainMod, 0, workspace, 10

# Move active window to a workspace with mainMod + SHIFT + [0-9]
bind = $mainMod SHIFT, 1, movetoworkspace, 1
bind = $mainMod SHIFT, 2, movetoworkspace, 2
bind = $mainMod SHIFT, 3, movetoworkspace, 3
bind = $mainMod SHIFT, 4, movetoworkspace, 4
bind = $mainMod SHIFT, 5, movetoworkspace, 5
bind = $mainMod SHIFT, 6, movetoworkspace, 6
bind = $mainMod SHIFT, 7, movetoworkspace, 7
bind = $mainMod SHIFT, 8, movetoworkspace, 8
bind = $mainMod SHIFT, 9, movetoworkspace, 9
bind = $mainMod SHIFT, 0, movetoworkspace, 10

# apps
bind = Control, 0, exec, firefox
bind = Control, 1, exec, vivaldi-stable --profile-directory="Profile 5"
bind = Control, 2, exec, vivaldi-stable --profile-directory="Profile 4"
bind = Control, 3, exec, vivaldi-stable --profile-directory="Profile 2"
bind = Control, 4, exec, vivaldi-stable --profile-directory="Profile 1"
bind = Control, M, exec, vivaldi-stable --profile-directory="Default"
# bind = Control, 5, exec, /home/zoro/Applications/Windsurf/bin/windsurf --enable-features=UseOzonePlatform --ozone-platform=wayland /home/zoro/.config/hypr/keybinding.conf
bind = CONTROL, 5, exec, qs -c keybind-manager
bind = Control, 6, exec, /home/zoro/Applications/VSCodium-1.107.18627.glibc2.30-x86_64.AppImage --enable-features=UseOzonePlatform --ozone-platform=wayland
bind = CONTROL_SHIFT, 8, exec, /home/zoro/Applications/Antigravity/antigravity
bind = Control, 7, exec, /home/zoro/Applications/Windsurf/windsurf --enable-features=UseOzonePlatform --ozone-platform=wayland
bind = Control, 8, exec, /home/zoro/Applications/Cursor-1.6.35-x86_64.AppImage --enable-features=UseOzonePlatform --ozone-platform=wayland
bind = Control, 9, exec, /home/zoro/Applications/void-linux/void
bindd = CONTROL_SHIFT, Escape, Open System Monitor, exec, foot btop

# Example special workspace (scratchpad)
#bind = $mainMod, S, togglespecialworkspace, magic
#bind = $mainMod SHIFT, S, movetoworkspace, special:magic

# Scroll through existing workspaces with mainMod + scroll
bind = $mainMod, mouse_down, workspace, e+1
bind = $mainMod, mouse_up, workspace, e-1

# Move/resize windows with mainMod + LMB/RMB and dragging
bindm = $mainMod, mouse:272, movewindow
bindm = $mainMod, mouse:273, resizewindow

# Laptop multimedia keys for volume and LCD brightness
bindel = ,XF86AudioRaiseVolume, exec, ~/.config/hypr/scripts/volume.sh --inc
bindel = ,XF86AudioLowerVolume, exec, ~/.config/hypr/scripts/volume.sh --dec
bindel = ,XF86AudioMute, exec, ~/.config/hypr/scripts/volume.sh --toggle
bindel = ,XF86AudioMicMute, exec, wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
bindel = ,XF86MonBrightnessUp, exec, ~/.config/hypr/scripts/brightness.sh --inc
bindel = ,XF86MonBrightnessDown, exec, ~/.config/hypr/scripts/brightness.sh --dec

# Requires playerctl
bindl = , XF86AudioNext, exec, playerctl next
bindl = , XF86AudioPause, exec, playerctl play-pause
bindl = , XF86AudioPlay, exec, playerctl play-pause
bindl = , XF86AudioPrev, exec, playerctl previous

# emoji
bind = $mainMod, comma, exec, qs -c emoji-picker


# Alternative: Use Alt+Tab for window switching if preferred (commented out)
bind = alt, tab, exec, ~/.config/hypr/scripts/window-switcher.sh

# --- Session Management ---
bind = $mainMod SHIFT, R, exec, ~/.config/hypr/scripts/session-manager.sh restore

# --- Keyboard Lighting Control (Hardware Fn Keys) ---
bind = , XF86Launch4, exec, ~/.config/hypr/scripts/control_lights.sh start
bind = , code:248, exec, ~/.config/hypr/scripts/control_lights.sh stop


